                            <!-- <menuitem value="ALT" label="ALT"/> -->
                            <!-- <menuitem value="PAUSE" label="PAUSE"/> -->
                            <!-- <menuitem value="CAPS_LOCK" label="CAPS_LOCK"/> -->
                            <menuitem value="F1" label="F1"/>
                            <menuitem value="F2" label="F2"/>
                            <menuitem value="F3" label="F3"/>
